@model StudentGymKOI.Models.GymClass

@{
    ViewData["Title"] = "Edit";
}


<div class="d-flex align-items-center py-4">

    <section class="form-signin w-100 m-auto">
        <form asp-action="Edit">
            <h1 class="h3 mb-3 fw-normal">Edit Gym Class</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ClassName" class="control-label"></label>
                <input asp-for="ClassName" class="form-control" />
                <span asp-validation-for="ClassName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="MaxMembers" class="control-label"></label>
                <input asp-for="MaxMembers" min="@Model?.CurrentMembers" class="form-control" />
                <span asp-validation-for="MaxMembers" class="text-danger"></span>
            </div>
            <input hidden asp-for="CurrentMembers" value="@Model?.CurrentMembers"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>


        </section>


    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
