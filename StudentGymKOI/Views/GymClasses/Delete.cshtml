@model StudentGymKOI.Models.GymClass

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex align-items-center py-4">
    <div class="modal modal-sheet position-static d-block p-4 py-md-5" tabindex="-1" role="dialog" id="modalChoice">
        <div class="modal-dialog" role="document">
            <div class="modal-content rounded-3 shadow">
                <div class="modal-body p-4 text-center">
                    <h5 class="mb-2">Are you sure your want to delete this?</h5>
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Gym Class Name: @Model.ClassName</div>
                            </div>
                            
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Max Members: @Model.MaxMembers</div>
                            </div>
                            
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Current Members: @Model.CurrentMembers</div>
                                
                            </div>
                          
                        </li>
                    </ul>
                </div>
                
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                    <div class="modal-footer flex-nowrap p-0">
                        <input class="btn btn-lg btn-danger fs-6 text-decoration-none col-6 py-3 m-0 rounded-0 border-end" type="submit" value="Delete"/>
                        <a type="button" class="btn btn-lg btn-outline-primary fs-6 text-decoration-none col-6 py-3 m-0 rounded-0" asp-action="Index">Back to List</a>
                    </div>
                    </form>
                     
            </div>
        </div>
    </div>
    
    
    
</div>
