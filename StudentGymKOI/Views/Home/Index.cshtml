@{
    ViewData["Title"] = "Home Page";
}

@if (TempData["JoinSuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["JoinSuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["LeaveSuccessMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["LeaveSuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    
}



@if (User.IsInRole("Member"))
{

    <center >

    
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            @if (ViewBag.Memberships != null && ViewBag.Memberships.Count > 0)
            {
                <h5 class="card-title">Your Membership</h5>
                
                    @foreach (var membership in ViewBag.Memberships)
                    {
                    <p class="card-text">@membership.MemberShipName</p>
                    }
                
            }
            else
            {
                <p class="card-text">You do not have any memberships.</p>
                
            }

            
            
                <a asp-controller="Memberships" asp-action="Index" class="btn btn-primary">Memberships</a>
        </div>
    </div>
    </center>
    
}





